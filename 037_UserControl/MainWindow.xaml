<Window x:Class="_037_UserControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_037_UserControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Text="Color Test" HorizontalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" Padding="15"/>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Margin="20" Width="50" Height="50"
                    Click="Red_Click">
                <StackPanel>
                    <Rectangle Fill="Red" Width="25" Height="25"/>
                    <TextBlock>Red</TextBlock>
                </StackPanel>
            </Button>
            <Button Margin="20" Width="50" Height="50"
                    Click="Green_Click">
                <StackPanel>
                    <Rectangle Fill="Green" Width="25" Height="25"/>
                    <TextBlock>Green</TextBlock>
                </StackPanel>
            </Button>
            <Button Margin="20" Width="50" Height="50"
                    Click="Blue_Click">
                <StackPanel>
                    <Rectangle Fill="Blue" Width="25" Height="25"/>
                    <TextBlock>Blue</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <Button DockPanel.Dock="Top" x:Name="btnColor" 
                Margin="10" Width="350" Height="200"></Button>
    </DockPanel>
</Window>
