<Window x:Class="_036_Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_036_Language"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <StackPanel Margin= "20">
        <TextBlock HorizontalAlignment="Center">
            ★좋아하는 프로그래밍 언어를 선택하세요★</TextBlock>
        <Separator Background= "LightSteelBlue" Margin= "0 10 0 0"/>
        <CheckBox x:Name= "cbC" Margin= "30 7 0 0"> C </CheckBox>
        <CheckBox x:Name= "cbCp" Margin= "30 7 0 0"> C++ </CheckBox>
        <CheckBox x:Name= "cbCs" Margin= "30 7 0 0"> C# </CheckBox>
        <CheckBox x:Name= "cbP" Margin= "30 7 0 0"> Python </CheckBox>
        <CheckBox x:Name= "cbJ" Margin= "30 7 0 0"> Java </CheckBox>
        <Separator Background= "LightSteelBlue" Margin= "0 10 0 0"/>
        <StackPanel Orientation= "Horizontal" HorizontalAlignment="Center">
            <Button x:Name= "btnSubmit" Width ="80" Margin= "10 15 5 0"
                    Click="btnSubmit_Click"> 투표하기 </Button>
            <Button x:Name= "btnExit" Width ="80" Margin= "10 15 5 0"
                    Click="btnExit_Click"> 끝내기</Button>
        </StackPanel>
    </StackPanel>
</Window>
